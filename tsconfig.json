{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "useDefineForClassFields": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "@badaitech/chaingraph-backend/*": ["packages/chaingraph-backend/src/*"],
      "@badaitech/chaingraph-backend": ["packages/chaingraph-backend/src"],
      "@badaitech/chaingraph-types/*": ["packages/chaingraph-types/src/*"],
      "@badaitech/chaingraph-types": ["packages/chaingraph-types/src"],
      "@badaitech/chaingraph-frontend": ["packages/chaingraph-frontend/src"],
      "@badaitech/chaingraph-frontend/*": ["packages/chaingraph-frontend/src/*"],
      "@badaitech/chaingraph-nodes": ["packages/chaingraph-nodes/src"],
      "@badaitech/chaingraph-nodes/*": ["packages/chaingraph-nodes/src/*"]
    },
    "resolveJsonModule": true,
    "types": ["node", "bun-types"],
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "packages/chaingraph-types"
    },
    {
      "path": "packages/chaingraph-nodes"
    },
    {
      "path": "packages/chaingraph-backend"
    },
    {
      "path": "packages/chaingraph-frontend"
    }
  ],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/__tests__",
    "**/coverage",
    "**/*.config.js",
    "**/*.config.mjs",
    "**/vite.config.ts",
    "**/eslint.config.mjs",
    "**/postcss.config.js",
    "**/tailwind.config.js"
  ]
}
