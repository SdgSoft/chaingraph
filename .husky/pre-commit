files=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|js|tsx|jsx|css)$' | grep -vE '\.config\.(ts|js|mjs)$' | grep -vE '^packages/badai-api/src/gql/client/')

for file in $files; do
    if ! grep -q "Copyright (c)" "$file"; then
        echo "‚ùå Error: Missing license header in $file"
        exit 1
    fi
done

exit 0
