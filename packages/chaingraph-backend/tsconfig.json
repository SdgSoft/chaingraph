{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "./src",
    "moduleResolution": "node",
    "paths": {
      "@chaingraph/types": ["../chaingraph-types/src"],
      "@chaingraph/types/*": ["../chaingraph-types/src/*"],
      "@chaingraph/nodes": ["../chaingraph-nodes/src"],
      "@chaingraph/nodes/*": ["../chaingraph-nodes/src/*"]
    },
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "sourceMap": true,
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "../chaingraph-types"
    },
    {
      "path": "../chaingraph-nodes"
    }
  ],
  "include": ["src/**/*"],
  "exclude": ["**/__tests__/**", "**/node_modules/**", "dist"]
}
