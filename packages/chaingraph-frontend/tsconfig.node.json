{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ESNext",
    "lib": ["ESNext"],
    "moduleDetection": "force",

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "../..",
    "module": "ESNext",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "paths": {
      "@chaingraph/types": ["packages/chaingraph-types/src"],
      "@chaingraph/types/*": ["packages/chaingraph-types/src/*"],
      "@chaingraph/nodes": ["packages/chaingraph-nodes/src"],
      "@chaingraph/nodes/*": ["packages/chaingraph-nodes/src/*"],
      "@chaingraph/backend": ["packages/chaingraph-backend/src"],
      "@chaingraph/backend/*": ["packages/chaingraph-backend/src/*"]
    },

    "types": ["vite/client"],
    "allowImportingTsExtensions": true,

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    "vite.config.ts"
  ]
}
