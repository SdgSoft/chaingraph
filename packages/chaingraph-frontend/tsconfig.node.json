{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ESNext",
    "lib": ["ESNext"],
    "moduleDetection": "force",

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "../..",
    "module": "ESNext",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "paths": {
      "@badaitech/chaingraph-types": ["packages/chaingraph-types/src"],
      "@badaitech/chaingraph-types/*": ["packages/chaingraph-types/src/*"],
      "@badaitech/chaingraph-nodes": ["packages/chaingraph-nodes/src"],
      "@badaitech/chaingraph-nodes/*": ["packages/chaingraph-nodes/src/*"],
      "@badaitech/chaingraph-backend": ["packages/chaingraph-backend/src"],
      "@badaitech/chaingraph-backend/*": ["packages/chaingraph-backend/src/*"],
      "@badaitech/chaingraph-frontend/*": ["packages/chaingraph-frontend/src/*"],
      "@badaitech/chaingraph-frontend": ["packages/chaingraph-frontend/src"]
    },

    "types": ["vite/client"],
    "allowImportingTsExtensions": true,

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "outDir": "./dist",
    "isolatedModules": true,
    "skipLibCheck": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    "vite.config.ts"
  ]
}
