{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@badaitech/chaingraph-types": ["../chaingraph-types/src"],
      "@badaitech/chaingraph-types/*": ["../chaingraph-types/src/*"],
      "@badaitech/chaingraph-nodes/*": ["./*"]
    },
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "sourceMap": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "../chaingraph-types"
    }
  ],
  "include": ["src/**/*"],
  "exclude": ["**/__tests__/**", "**/node_modules/**"]
}
