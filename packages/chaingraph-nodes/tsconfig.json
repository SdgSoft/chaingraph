{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "rootDir": "../../",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@chaingraph/types/*": ["../chaingraph-types/src/*"],
      "@chaingraph/types": ["../chaingraph-types/src"],
      "@chaingraph/nodes/*": ["./src/*"]
    },
    "allowImportingTsExtensions": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "../chaingraph-types"
    }
  ],
  "include": ["./src/**/*", "../chaingraph-types/src/**/*"]
}
