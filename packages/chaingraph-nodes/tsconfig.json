{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@chaingraph/backend/*": ["../chaingraph-backend/src/*"],
      "@chaingraph/backend": ["../chaingraph-backend/src"],
      "@chaingraph/types/*": ["../chaingraph-types/src/*"],
      "@chaingraph/types": ["../chaingraph-types/src"],
      "@chaingraph/frontend": ["../chaingraph-frontend/src"],
      "@chaingraph/frontend/*": ["../chaingraph-frontend/src/*"],
      "@chaingraph/nodes/*": ["./src/*"]
    },
    "allowImportingTsExtensions": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "references": [
    { "path": "../chaingraph-types" },
    { "path": "../chaingraph-frontend" },
    { "path": "../chaingraph-backend" }
  ],
  "include": ["./src/**/*"]
}
